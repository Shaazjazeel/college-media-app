            <!--        app:layout_constraintStart_toEndOf="@+id/uuuhh"-->
            <!--        app:layout_constraintTop_toBottomOf="@+id/namebbb" />-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>